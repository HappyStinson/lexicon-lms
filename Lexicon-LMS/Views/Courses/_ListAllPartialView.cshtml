@model IEnumerable<Lexicon_LMS.Models.Course>

<table class="table sortable table-hover table-striped">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th data-defaultsort='disabled'>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.StartDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EndDate)
            </th>
            <th data-defaultsort='disabled'></th>
        </tr>
    </thead>

@foreach (var item in Model)
{
    <tbody>
        <tr>
            <td>
                @Html.ActionLink(item.Name, "Details", new { Id = item.Id }, null)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.StartDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EndDate)
            </td>
            <td>
                @Html.ActionLink("Lägg till aktivitet", "Create", "Activities", new { courseId = item.Id }, new { @class = "btn btn-default btn-xs" })
                @Html.ActionLink("Lägg till modul", "Create", "Modules", new { courseId = item.Id }, new { @class = "btn btn-default btn-xs" })
                @Html.ActionLink("Ändra", "Edit", new { id = item.Id }) |
                @Html.ActionLink("Ta bort", "Delete", new { id = item.Id })
            </td>
        </tr>
    </tbody>
}

</table>
