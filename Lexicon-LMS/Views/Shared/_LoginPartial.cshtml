@using Microsoft.AspNet.Identity
@using Lexicon_LMS.Helpers

@if (Request.IsAuthenticated)
{
    using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
    {
    @Html.AntiForgeryToken()

    <ul class="nav navbar-nav navbar-right">
        <li>
            @Html.ActionLink("Välkommen " + User.GetFullName(), "Edit", "Account", routeValues: new { id = User.Identity.GetUserId() }, htmlAttributes: null)
        </li>
        <li><a href="javascript:document.getElementById('logoutForm').submit()">Logga ut</a></li>
    </ul> 
    }
}
else
{
    <ul class="nav navbar-nav navbar-right">
    
    </ul>
}
