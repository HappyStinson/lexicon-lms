@model IEnumerable<Lexicon_LMS.Models.ActivityType>

@{
    ViewBag.Title = "Översikt av aktivitetstyper";
}

<h2>Översikt av aktivitetstyper</h2>

<p>
    <a href="create" class="btn btn-info" role="button">Lägg till en ny aktivitetstyp</a>
</p>
<table class="table sortable table-hover table-striped">
     <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th data-defaultsort='disabled'>
                </th>               
            </tr>
     </thead>

     @foreach (var item in Model)
     {
          <tr>
              <td>
                  @Html.DisplayFor(modelItem => item.Name)
              </td>
              <td>
                  @Html.ActionLink("Ändra", "Edit", new { id = item.Id }) |
                  @Html.ActionLink("Ta bort", "Delete", new { id = item.Id })
              </td>
          </tr>
      }

</table>


